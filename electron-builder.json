{
  "appId": "com.fusion.app",
  "productName": "Fusion",
  "directories": {
    "output": "dist",
    "buildResources": "build"
  },
  "files": [
    "electron-main.js",
    "preload.js",
    "package.json",
    "out/**/*",
    "public/icon.ico",
    "public/icon-512.png",
    "public/favicon.ico",
    "!node_modules/**/*",
    "!dist/**/*",
    "!Test/**/*",
    "!installer/**/*",
    "!.next/**/*"
  ],
  "extraResources": [
    {
      "from": "installer/scripts",
      "to": "installer/scripts",
      "filter": ["**/*.ps1"]
    },
    {
      "from": "installer/docker",
      "to": "installer/docker",
      "filter": ["**/*"]
    },
    {
      "from": "public",
      "to": "icons",
      "filter": ["*.ico", "*.png"]
    }
  ],
  "win": {
    "icon": "public/icon.ico",
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "artifactName": "${productName}-Setup-${version}.${ext}",
    "requestedExecutionLevel": "requireAdministrator"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowElevation": true,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "installerIcon": "public/icon.ico",
    "uninstallerIcon": "public/icon.ico",
    "installerHeaderIcon": "public/icon.ico",
    "shortcutName": "Fusion",
    "include": "build/installer.nsh",
    "warningsAsErrors": false,
    "runAfterFinish": false,
    "deleteAppDataOnUninstall": false,
    "menuCategory": true
  },
  "publish": null
}
